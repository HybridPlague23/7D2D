<configs>

<append xpath="/materials">

	<material id="MresourceForgedCarbonSteel">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="metal"/>
		<property name="forge_category" value="iron"/>
		<property name="Experience" value="25"/>
	</material>

	<material id="MresourceCarbonFiber">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="cloth"/>
		<property name="forge_category" value="resourceYuccaFiber"/>
		<property name="Experience" value="25"/>
	</material>

	<!-- Creates the Reinforced Steel Shapes -->
	<material id="Mreinforced_steel_shapes">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="metal"/>
		<property name="forge_category" value="iron"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="stepsound" value="metal"/>
		<property name="stability_glue" value="300"/>
		<property name="Mass" type="int" value="20"/>
		<property name="explosionresistance" value="2.5"/>
		<property name="MaxDamage" value="25000"/>
		<property name="Experience" value="8"/>
	</material>

</append>

</configs>